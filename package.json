{
  "name": "i18n-manager",
  "version": "1.1.0",
  "description": "Clean your localization files to easly maintain them.",
  "reopsitory": {
    "type": "git",
    "url": "https://github.com/reod/i18n-manager.git"
  },
  "main": "bin/src/i18n-manager.js",
  "scripts": {
    "test": "jest",
    "dev": "tsc -w",
    "prepare-release": "npm run generate-doc && npm run generate-code-coverage-raport && git add . && git commit -m 'Prepare doc and coverage raport for release.'",
    "do-release": "npm publish && git push --follow-tags",
    "patch-release": "npm run prepare-release && npm version patch && npm run do-release",
    "minor-release": "npm run prepare-release && npm version minor && npm run do-release",
    "major-release": "npm run prepare-release && npm version major && npm run do-release",
    "generate-doc": "typedoc --out docs/ src/",
    "generate-code-coverage-raport": "jest --coverage",
    "create-playground": "node -e 'require(`./bin/test/test-utils`).createPlayground()'",
    "clear-playground": "node -e 'require(`./bin/test/test-utils`).clearPlayground()'"
  },
  "author": "Remek Ambroziak <remek.ambroziak@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^20.0.4",
    "@types/sinon": "^2.3.3",
    "flat": "^2.0.1",
    "jest": "^20.0.4",
    "nock": "^9.0.14",
    "sinon": "^2.3.8",
    "ts-jest": "^20.0.7",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.2"
  },
  "bin": {
    "i18n-manager": "bin/src/i18n-manager.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/commander": "^2.9.1",
    "@types/flat": "0.0.28",
    "axios": "^0.16.2",
    "commander": "^2.11.0",
    "lodash": "^4.17.4"
  }
}
